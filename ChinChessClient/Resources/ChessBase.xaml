<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:contracts="clr-namespace:ChinChessCore.Contracts;assembly=ChinChessCore">
    <Style
        x:Key="FunctionButton"
        BasedOn="{StaticResource ButtonBase_Icon_ScaleDown_Big_SkyBlue}"
        TargetType="Button">
        <Setter Property="Margin" Value="5,0" />

        <Setter Property="FontSize" Value="40" />

        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
    </Style>

    <Style
        x:Key="StartPauseButton"
        BasedOn="{StaticResource FunctionButton}"
        TargetType="Button">
        <Setter Property="Content" Value="&#xe87c;" />

        <Setter Property="Command" Value="{Binding TogglePauseCommand}" />

        <Setter Property="ToolTip" Value="{Binding KeyGestureDic[播放/暂停].ToolTip}" />

        <Style.Triggers>
            <DataTrigger Binding="{Binding IsPaused}" Value="False">
                <Setter Property="Content" Value="&#xe62a;" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style
        x:Key="RePlayButton"
        BasedOn="{StaticResource FunctionButton}"
        TargetType="Button">
        <Setter Property="FontSize" Value="30" />

        <Setter Property="Command" Value="{Binding RePlayCommand}" />
        <Setter Property="Content" Value="&#xe63e;" />

        <Setter Property="ToolTip" Value="{Binding KeyGestureDic[重玩].ToolTip}" />
    </Style>

    <Style x:Key="Element_Visible" TargetType="Grid">
        <Setter Property="Visibility" Value="Visible" />

        <Style.Triggers>
            <DataTrigger Binding="{Binding Status}" Value="{x:Static contracts:EnumGameStatus.Ready}">
                <Setter Property="Visibility" Value="Collapsed" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Signal" TargetType="Ellipse">
        <Setter Property="Stroke" Value="Yellow" />
        <Setter Property="StrokeThickness" Value="4" />

        <Setter Property="Width" Value="35" />
        <Setter Property="Height" Value="35" />

        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="6" ShadowDepth="3" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="CancelLastButton"
        BasedOn="{StaticResource FunctionButton}"
        TargetType="Button">
        <Setter Property="FontSize" Value="30" />

        <Setter Property="Command" Value="{Binding RevokeCommand}" />
        <Setter Property="Content" Value="&#xe651;" />

        <Setter Property="ToolTip" Value="{Binding KeyGestureDic[悔棋].ToolTip}" />
    </Style>

    <Style
        x:Key="GiveUpButton"
        BasedOn="{StaticResource FunctionButton}"
        TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource Iconfont}" />

        <Setter Property="Command" Value="{Binding GiveUpCommand}" />
        <Setter Property="Content" Value="&#xe60e;" />

        <Setter Property="ToolTip" Value="{Binding KeyGestureDic[认输].ToolTip}" />
    </Style>

    <Style
        x:Key="HeQiButton"
        BasedOn="{StaticResource FunctionButton}"
        TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource Iconfont}" />

        <Setter Property="Command" Value="{Binding HeQiCommand}" />
        <Setter Property="Content" Value="&#xe627;" />

        <Setter Property="ToolTip" Value="{Binding KeyGestureDic[和棋].ToolTip}" />
    </Style>
</ResourceDictionary>
<UserControl
    x:Class="ChinChessClient.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:regions="http://prismlibrary.com/"
    regions:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="60" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="/Resources/Images/木纹_浅色.jpeg" />
                </Setter.Value>
            </Setter>
            <Setter Property="MyAttachProperty.CornerRadius" Value="0" />
        </Style>
    </UserControl.Resources>
    <UniformGrid
        MaxWidth="500"
        Columns="2"
        Rows="5">
        <Button
            Command="{Binding NavigateToCommand}"
            CommandParameter="Online"
            Content="线上对战" />
        <Button
            Command="{Binding NavigateToCommand}"
            CommandParameter="OnlineJieQi"
            Content="线上揭棋" />

        <Button
            Command="{Binding NavigateToCommand}"
            CommandParameter="Offline"
            Content="本地对战" />
        <Button
            Command="{Binding NavigateToCommand}"
            CommandParameter="OfflineJieQi"
            Content="本地揭棋" />

        <Button
            Command="{Binding NavigateToCommand}"
            CommandParameter="OfflineAuto"
            Content="人机对战" />

        <Button
            Command="{Binding NavigateToCommand}"
            CommandParameter="OfflineCustom"
            Content="本地残局" />

        <Button
            Command="{Binding NavigateToCommand}"
            CommandParameter="OfflineEndGames"
            Content="残局挑战" />
    </UniformGrid>
</UserControl>

<UserControl
    x:Class="ChinChessClient.Views.OfflineEndGamesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:ChinChessClient.ViewModels"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <ListBox
        MaxWidth="600"
        Margin="10"
        BorderBrush="{StaticResource TransparentButtonBackground}"
        BorderThickness="2"
        ItemsSource="{Binding EndGames}">
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel MaxWidth="600" Margin="30" />
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
        <ListBox.ItemTemplate>
            <DataTemplate DataType="{x:Type vm:EndGameModel}">
                <Button
                    Width="120"
                    Height="40"
                    Command="{Binding DataContext.GoToPlayManualCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                    CommandParameter="{Binding}"
                    Content="{Binding Name}"
                    Style="{StaticResource ButtonBase_Icon_Conent_Transparent}" />
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
